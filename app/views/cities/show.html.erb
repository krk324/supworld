<div class="container-full">

  <div class="row">

    <div class="col-lg-12 text-center v-center">

      <h1>
        <%=@city.city%></h1>
      <br>
      <p class="lead">
        Country:
        <%=@city.country%></p>
      <p class="lead">
        Population:
        <%=@country_population.to_s%></p>
      <p class="lead">
        <%=@time_zone%></p>
        <p class="lead">
        <% if user_signed_in? && current_user.visits.where(city_id: @city.id).present?%>
          <%= link_to 'Traveled', city_visits_path(@city), method: :post%>
          : <%=current_user.visits.where(city_id: @city.id).first.count%> times. </p>
        <% else %>
          Have never traveled to <%=@city.country%> :
          <%= link_to 'Traveled?', city_visits_path(@city), method: :post%>
        <% end %>

        <br>
    </div>

  </div><!-- /row -->

  <div class="row">
    <div class="col-lg-12 text-center v-center">
      <h2><%=raw(@images)%></h2>
    </div>
  </div>

  <div class="container">
    <hr>

    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3>Trending Twitter Keywords</h3>
          </div>
          <div class="panel-body"><%=@trending_topics%></div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-info ">
          <div class="panel-heading">
            <% if user_signed_in?%>
              <h3>Memo</h3>
              <h4>
                <%= link_to 'Add Memo', new_city_memo_path(@city) %></h4>
          </div>
          <div class="panel-body">
              <%@city.memos.where(user_id: current_user.id).each do |memo| %>
              <li>
                <%= memo.memo%>
                |
                <%= link_to 'Delete', city_memo_path(@city,memo), method: :delete%></li>
              <%end%>
            <%end%>
          </div>
        </div>
      </div>
    </div>

    <hr>
    <div class="row">
      <div class = "text-center">
        <div class="input-group input-group-lg col-sm-offset-4 col-sm-4">
          <%= form_tag cities_path, method: :post do %>
          <%= text_field_tag :city, params[:city] ,class: "center-block form-control input-lg", placeholder: 'Enter city name' %>
          <%= submit_tag "Search" ,class: "btn btn-lg btn-primary"%>
          <% end %>
        </div>
      </div>
    </div> <!-- /row -->
  </div>
