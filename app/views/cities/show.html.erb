<div class="container-full" >
  <div class ="backgroundphoto" style="background: url(<%=Flickr.get_random_city_images(@city.city)%>); background-size: cover">
    <div class="row" id = "heading">

      <div class="col-lg-12 text-center v-center">

        <h1>
          <%=@city.city%></h1>
        <br>
        <p class="lead">
          Country:
          <%=@city.country%></p>
        <p class="lead">
          Population:
          <%=number_with_delimiter(@country_population, delimiter: ',')%></p>
        <p class="lead">
          <%=@time_zone%></p>
        <p class="lead">
          <% if user_signed_in? && current_user.visits.where(city_id: @city.id).present?%>
            <%= link_to 'Been here', city_visits_path(@city), method: :post%>
            : <%=current_user.visits.where(city_id: @city.id).first.count%> time(s). </p>
          <% else %>
            You've never traveled to <%=@city.city%> :
            <%= link_to 'Have been here?', city_visits_path(@city), method: :post%>
             <span class="glyphicon glyphicon-send"></span>
          <% end %>

          <br>
      </div>

    </div><!-- /row -->

    <div class="row">
      <div class="col-md-12" id= "heading2">
        <h2 id="twitter">Trending Twitter Keywords</h2>
        <p id="twitter"><%=@trending_topics%></p>
      </div>
    </div>
  </div>

  <div class="container">
    <hr>
   <div class="row">
      <div class="col-lg-12 text-center v-center">
        <h2>Instagram pictures taken at <%=@city.city%></h2>
        <h2><%=raw(@images)%></h2>
      </div>
    </div>

    <% if user_signed_in?%>
    <hr>
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default ">
          <div class="panel-heading text-center">
              <h3>Memo</h3>
              <h4>
                <%= link_to new_city_memo_path(@city),style: 'color:black;' do %>
                 <i class="glyphicon glyphicon-plus"></i><i class="glyphicon glyphicon-list-alt"></i>
                 <%end%>
          </div>
          <div class="panel-body text-center">
              <%@city.memos.where(user_id: current_user.id).each do |memo| %>
              <li>
                <%= memo.memo%>
                |
                <%= link_to city_memo_path(@city,memo), method: :delete, style: 'color:black;' do%>
                 <i class="glyphicon glyphicon-trash"></i></li>
                <%end%>
              <%end%>
          </div>
        </div>
      </div>
    </div>
    <%end%>


    <hr>
    <div class="row">
      <div class = "text-center">
        <div class="input-group input-group-lg col-sm-offset-4 col-sm-4">
          <%= form_tag cities_path, method: :post do %>
          <%= text_field_tag :city, params[:city] ,class: "center-block form-control input-lg", placeholder: 'Enter city name' %>
          <%= submit_tag "Search" ,class: "btn btn-lg btn-primary"%>
          <% end %>
        </div>
      </div>
    </div> <!-- /row -->
  </div>
